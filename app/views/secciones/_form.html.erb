<%= simple_form_for(@seccione) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre, :required => true  %>
    <%= f.input :porcentaje_componente, :required => true  %>
    <%= f.input :valor_obtenido, :required => true  %>
    <%= f.association :area, :required => true  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Guardar', class: "btn btn-success" %>
    <%= link_to 'Cancelar', secciones_path, class: "btn btn-danger"  %>
  </div>
<% end %>
