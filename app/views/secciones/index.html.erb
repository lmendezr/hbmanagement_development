<h1>Secciones</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Porcentaje componente</th>
      <th>Valor obtenido</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secciones.each do |seccione| %>
      <tr>
        <td><%= seccione.nombre %></td>
        <td><%= seccione.porcentaje_componente %></td>
        <td><%= seccione.valor_obtenido %></td>
        <td><%= seccione.area.nombre if seccione.area %></td>
        <td><%= link_to 'Ver', seccione %></td>
        <td><%= link_to 'Editar', edit_seccione_path(seccione) %></td>
        <td><%= link_to 'Eliminar', seccione, method: :delete, data: { confirm: 'Estas seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

