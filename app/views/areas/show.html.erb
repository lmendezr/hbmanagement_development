<p id="notice"><%= notice %></p>

<h1> <%= @area.nombre %> </h1>

<p>
  <strong>Proyecto:</strong>
  <%= @area.proyecto.nombre if @area.proyecto %>
</p>

<table class='table'>
  <thead>
    <tr>
      <th>Areas</th>
      <th>Porciento obtenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @area.secciones.each do |seccione| %>
      <tr>
        <td><%= seccione.nombre %></td>
        <td><%= seccione.porciento_obtenido %></td>
        <td><%= link_to 'Ver', seccione %></td>
        <td><%= link_to 'Editar', edit_seccione_path(seccione) %></td>
        <td><%= link_to 'Eliminar', seccione, method: :delete, data: { confirm: 'Estas seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Editar', edit_area_path(@area), class:'btn btn-success' %> 
<%= link_to 'Regresar', areas_path, class:'btn btn-primary' %>
