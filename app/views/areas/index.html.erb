<h1>Edificios/Áreas</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Proyecto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.nombre %></td>
        <td><%= area.proyecto.nombre if area.proyecto %></td>
        <td><%= link_to 'Ver', area %></td>
        <td><%= link_to 'Editar', edit_area_path(area) %></td>
        <td><%= link_to 'Eliminar', area, method: :delete, data: { confirm: 'Estas seguro(a)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Área', new_area_path, class:'btn btn-primary' %>
